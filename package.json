{
  "name": "boil",
  "version": "2.0.0",
  "description": "Modern Frontend Boilerplate Generator - Create HTML boilerplates and frontend projects with beautiful CLI",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "boil": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "watch": "tsc --watch",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "html",
    "boilerplate",
    "generator",
    "frontend",
    "bootstrap",
    "tailwind",
    "materialize",
    "skeleton",
    "daisyui",
    "scaffold",
    "template"
  ],
  "author": "Phil Wamba <philwamba@yahoo.com>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "ejs": "^3.1.9",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.3.8",
    "ora": "^7.0.1",
    "qrcode-terminal": "^0.12.0",
    "sirv-cli": "^2.0.2",
    "update-notifier": "^7.0.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.10.6",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "sharp": "^0.33.1"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
